<Window x:Class="ruvseq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ruvseq"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <Menu HorizontalAlignment="Left" Height="20" VerticalAlignment="Bottom" Width="515" Margin="0,0,0,300">
            <MenuItem Header="File">
                <MenuItem Header="Open" StaysOpenOnClick="True" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <ListBox x:Name="group1" Height="153" Canvas.Top="115" Width="107" Canvas.Left="10" AllowDrop="True" MouseDown="group1_MouseDown"/>
        <ListBox x:Name="group2" Height="153" Canvas.Left="131" Canvas.Top="115" Width="107" AllowDrop="True" MouseDown="group2_MouseDown"/>
    </Canvas>
</Window>
